# .env.local - Configuração LOCAL para DESENVOLVIMENTO com SQLite

# --- Configuração do Django ---
DJANGO_SETTINGS_MODULE=config.settings.local_sqlite
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
PROD_HOSTNAME=localhost

# --- Configuração do Banco (SQLite local) ---
# Não precisa de variáveis de DB aqui pois usamos SQLite (arquivo local)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Essas variáveis são ignoradas quando usamos SQLite
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=
